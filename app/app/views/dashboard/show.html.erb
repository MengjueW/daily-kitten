<!-- Page Content -->
<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
            <h2 class="sub-header">Cats Management</h2>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Thumbnail</th>
                  <th>Name</th>
                  <th>Sex</th>
                  <th>Breed</th>
                  <th>Description</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
              <% @shelter.cats.each do |cat| %>
                <tr>
                  <td><%= link_to image_tag(cat.pictures.first.image.url(:thumb, :class => 'img-responsive')), cat_path(cat)%></td>
                  <td><%= cat.name %></td>
                  <td><%= cat.sex.humanize %></td>
                  <td><%= cat.breed.humanize %></td>
                  <td><%= cat.description %></td>
                  <td>
                  <%= link_to 'Edit', edit_cat_path(cat), class:"btn btn-default"%>
                  <%= link_to 'Delete', cat_path(cat), class:"btn btn-default",
                    method: :delete, data: { confirm: 'Are you sure?'} %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
            </div>
        </div>
    </div>
</div>