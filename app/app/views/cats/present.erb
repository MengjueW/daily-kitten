<div class="row">
  <% @cats.each do |cat| %>
    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
      <% if cat.pictures.first %>
        <%= link_to image_tag(cat.pictures.first.image.url(:medium, :class => 'img-responsive')), cat_path(cat), class: "thumbnail" %>
      <% else %>
        N/A
      <% end %>
      <div class="table-responsive">
        <table class="table">
          <tbody>
            <tr>
              <td><strong>Name:</strong></td>
              <td><%= cat.name %></td>
            </tr>
            <tr>
              <td><strong>Description:</strong></td>
              <td><%= cat.description %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>