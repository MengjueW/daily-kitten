<%= simple_form_for @cat, html: { multipart: true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :age %>
    <%= f.input :breed %>
    <%= f.input :sex %>
    <%= f.input :description %>
    <%= file_field_tag "images[]", type: :file, multiple: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
