<p id="notice"><%= notice %></p>

<h1>Listing Cats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Breed</th>
      <th>Sex</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @cats.each do |cat| %>
        <div class="caption">
          <p style="text-align: center;">
            <tr>
              <td><%= cat.name %></td>
              <td><%= cat.age %></td>
              <td><%= cat.breed %></td>
              <td><%= cat.sex %></td>
              <td><%= cat.description %></td>
              <td>
                <div class="thumbnail">
                  <% if cat.pictures.first %>
                    <%= link_to image_tag(cat.pictures.first.image.url(:thumb)), cat_path(cat) %>
                  <% else %>
                    N/A
                  <% end %>
                </div>
              </td>
              <td><%= link_to 'Show', cat %></td>
              <td><%= link_to 'Edit', edit_cat_path(cat) %></td>
              <td><%= link_to 'Destroy', cat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          </p>
        </div>
      <% end %>
  </tbody>
</table>

<br>

